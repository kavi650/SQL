-- 1. CREATE TABLE
CREATE TABLE Students (
    StudentID INT PRIMARY KEY,
    StudentName VARCHAR(50),
    Age INT
);

-- 2. ALTER TABLE – Add a new column
ALTER TABLE Students
ADD Department VARCHAR(30);

-- 3. ALTER TABLE – Modify column data type
ALTER TABLE Students
MODIFY Age SMALLINT;

-- 4. ALTER TABLE – Rename a column
ALTER TABLE Students
RENAME COLUMN StudentName TO Name;

-- 5. INSERT VALUES INTO TABLE
INSERT INTO Students (StudentID, Name, Age, Department)
VALUES (1, 'Arun', 20, 'CSE');

INSERT INTO Students (StudentID, Name, Age, Department)
VALUES (2, 'Priya', 19, 'IT');

INSERT INTO Students (StudentID, Name, Age, Department)
VALUES (3, 'Rahul', 21, 'ECE');

-- 6. TRUNCATE TABLE – Delete all rows
TRUNCATE TABLE Students;

-- 7. DROP TABLE – Remove table
DROP TABLE Students;
